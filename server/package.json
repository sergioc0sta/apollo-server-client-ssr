{
  "name": "apollo-server",
  "version": "1.0.0",
  "description": "Simple backend server with apollo",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon index.js",
    "lint": "eslint \"./**/*.js\" --quiet",
    "lintFull": "eslint \"./**/*.js\"",
    "lintFix": "eslint --fix './**/*.js'",
    "format": "prettier --write '**/*.{js,jsx}'"
  },
  "nodemonConfig": {
    "watch": [
      "src/"
    ],
    "ignore": [
      "node_modules/"
    ]
  },
  "dependencies": {
    "apollo-server-express": "^2.21.2",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "mongoose": "^5.12.2"
  },
  "devDependencies": {
    "eslint": "^7.22.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "prettier": "^2.2.1"
  }
}
